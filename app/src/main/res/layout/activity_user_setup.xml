<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnk.highschoolio.UserSetup"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/gradient">

    <EditText
        android:id="@+id/editText3"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@+id/CompanyLogin"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="17dp" />


    <EditText
        android:id="@+id/CompanyLogin"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/emailLogin"
        tools:layout_editor_absoluteX="17dp"
        tools:text="Company" />

    <EditText
        android:id="@+id/emailLogin"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/passwordLogin"
        tools:layout_editor_absoluteX="17dp" />

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="PassWoRd"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="176dp"
        android:layout_weight="1"
        android:alpha=".9"
        android:backgroundTint="#4776ff"
        android:text="Sign Up"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/passwordLogin"
        tools:layout_editor_absoluteX="17dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:text="Account Setup"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
